{
  "name": "aoe-stats-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Age of Empires II Statistics Dashboard - Frontend",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "vite preview --port 3001",
    "dev:with-jobs": "ENABLE_BACKGROUND_JOBS=true nodemon server.js",
    
    "rankings:full": "node scripts/update-rankings.js full",
    "rankings:update": "node scripts/update-rankings.js update", 
    "rankings:status": "node scripts/update-rankings.js status",
    
    "optimize:db": "node scripts/optimize-for-rankings.js",
    "optimize:minimal": "node scripts/minimal-indexes.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "recharts": "^3.1.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "daisyui": "^4.4.20",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.17",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
